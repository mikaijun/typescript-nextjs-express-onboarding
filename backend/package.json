    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.12.1",
    "@typescript-eslint/parser": "^8.12.1",
    "concurrently": "^9.0.1",
    "cors": "^2.8.5",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "swagger-typescript-api": "^13.0.22",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
